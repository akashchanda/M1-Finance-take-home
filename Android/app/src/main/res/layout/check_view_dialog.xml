<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/transaction_dialog_width"
    android:layout_height="@dimen/check_dialog_height">

    <ImageView
        android:id="@+id/check_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/check_image"
        android:paddingLeft="@dimen/check_image_horizontal_padding"
        android:paddingRight="@dimen/check_image_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@id/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_image" />
</androidx.constraintlayout.widget.ConstraintLayout>